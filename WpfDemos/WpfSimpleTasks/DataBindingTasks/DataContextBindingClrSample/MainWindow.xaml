<Window x:Class="DataContextBindingClrSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataContextBindingClrSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200">
    <StackPanel x:Name="StackPanelMain">
        <!-- <StackPanel.DataContext> -->
        <!--     <local:Student Name="hero" Id="318" Sex="male"></local:Student> -->
        <!-- </StackPanel.DataContext> -->
        
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel x:Name="StackPanelStudent">
                <TextBlock x:Name="TextBlockId" Height="23" Width="120" Text="{Binding Id}"></TextBlock>
                <TextBlock x:Name="TextBlockName" Height="23" Width="120" Text="{Binding Name}"></TextBlock>
                <TextBlock x:Name="TextBlockSex" Height="23" Width="120" Text="{Binding Sex}"></TextBlock>
            </StackPanel>
        </Grid>

    </StackPanel>
</Window>
