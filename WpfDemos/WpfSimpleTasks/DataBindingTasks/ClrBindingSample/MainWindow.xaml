<Window x:Class="ClrBindingSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClrBindingSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="260">
        
    <StackPanel Margin="30" Width="180">
        <TextBlock Text="学生姓名:" Height="40" FontSize="18"></TextBlock>
        <TextBox x:Name="TextBoxName" Height="40" FontSize="18" Width="150"></TextBox>
        <TextBlock Text="学生性别:" Height="40" FontSize="18"></TextBlock>
        <TextBox x:Name="TextBoxSex" Height="40" FontSize="18" Width="150"></TextBox>
        <Button x:Name="ButtonChange" Content="修改信息" FontSize="18" Height="40" Width="150" Margin="0,10" Click="ButtonChange_OnClick"></Button>
        <TextBlock x:Name="TextBlockNameModify" Height="40" FontSize="18"></TextBlock>
    </StackPanel>
</Window>
