<Window x:Class="ColorBindingSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorBindingSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <StackPanel Margin="5,5">
        <TextBlock Text="颜色选择:"></TextBlock>
        <ListBox x:Name="ListBoxColor" Margin="40,0,40,0" SelectedIndex="2" FontSize="14">
            <ListBoxItem Content="Blue"></ListBoxItem>
            <ListBoxItem Content="Yellow"></ListBoxItem>
            <ListBoxItem Content="Red"></ListBoxItem>
            <ListBoxItem Content="Purple"></ListBoxItem>
        </ListBox>
        <TextBlock Text="你选择的颜色:"></TextBlock>
        <TextBlock x:Name="TextBlockColor" Margin="40,0"></TextBlock>
        <Rectangle x:Name="RectangleColor" Width="170" Height="20"></Rectangle>
    </StackPanel>
</Window>
